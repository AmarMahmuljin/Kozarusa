generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    USER
    GUEST
    ADMIN
}

model User {
    id          Int         @id @default(autoincrement())
    username    String      @unique
    email       String      @unique
    password    String
    role        Role
}