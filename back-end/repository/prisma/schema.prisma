generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    user
    guest
    admin
}

model User {
    id          Int         @id @default(autoincrement())
    username    String      @unique
    firstName   String
    lastName    String
    email       String      @unique
    password    String
    role        Role
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt @default(now())
}